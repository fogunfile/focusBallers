<%- include("../partials/header") -%>
    <header class="jumbotron">
        <h1>Fixture</h1>
        <a href="/fixture/<%= fixture._id %>/edit" class="btn btn-md btn-primary">Edit fixture</a>
    </header>
    <div class="container text-center">
        <form method="POST" action="/fixture">
            <div class="form-group">
                <label for="date">Date:</label>
                <input type="date" name="date" value="<%= moment(fixture.date).format("YYYY-MM-DD") %>" class="form-control" />
            </div>
            <div class="form-group">
                <label>Select <b>home</b> team:</label>
                <select name="homeTeam" id="" class="form-control">
                    <option value="<%= fixture.homeTeam._id %>"><%= fixture.homeTeam.name %></option>
                    <% teams.forEach((team)=>{ %>
                        <option value="<%= team._id %>"><%= team.name %></option>
                    <% }) %>
                </select>
            </div>
            <div class="form-group">
                <label>Select <b>away</b> team:</label>
                <select name="awayTeam" id="" class="form-control">
                    <option value="<%= fixture.awayTeam._id %>"><%= fixture.awayTeam.name %></option>
                    <% teams.forEach((team)=>{ %>
                        <option value="<%= team._id %>"><%= team.name %></option>
                    <% }) %>
                </select>                
            </div>
            <div>
                <textarea name="info" id="" cols="30" rows="10" class="form-control"></textarea>
            </div>
            <input type="submit" class="btn btn-md btn-primary my-3" />
        </form>
    </div>

<%- include("../partials/footer") -%>
