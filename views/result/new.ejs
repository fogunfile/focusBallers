<%- include("../partials/header") -%>
    <header class="jumbotron">
        <h1>Set Scores</h1>
    </header>
    <div class="container">
        <form method="POST" action="/result/<%= fixture._id %>">
            <div class="form-group">
                <label for="date">Date:</label>
                <input type="date" name="date" value="<%= moment().format("YYYY-MM-DD") %>" class="form-control" />
            </div>
            <div class="form-group">
                <label><b><%= fixture.homeTeam.name %></b></label>
                <input type="number" name="homeTeamScore" value="0" min="0" class="form-control">
            </div>
            <div class="form-group">
                <label><b><%= fixture.awayTeam.name %></b></label>
                <input type="number" name="awayTeamScore" value="0" min="0" class="form-control">
            </div>
            <div>
                <textarea name="info" id="" cols="30" rows="10" class="form-control"></textarea>
            </div>
            <input type="submit" class="btn btn-md btn-primary my-3" />
        </form>
    </div>

<%- include("../partials/footer") -%>
