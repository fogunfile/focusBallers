<%- include("../partials/header") -%>
    <header class="jumbotron">
        <h1>Edit Result</h1>
        <a href="/result/<%= result._id %>" class="btn btn-md btn-primary">Back</a>
    </header>
    <div class="container">
        <form method="POST" action="/result/<%= result._id %>/?_method=PUT">
            <div class="form-group">
                <label for="date">Date:</label>
                <input type="date" name="date" value="<%= moment(result.date).format("YYYY-MM-DD") %>" class="form-control" />
            </div>
            <div class="form-group">
                <label><b><%= result.fixture.homeTeam.name %></b></label>
                <input type="number" name="homeTeamScore" value="<%= result.homeTeamScore %>" min="0" class="form-control">
            </div>
            <div class="form-group">
                <label><b><%= result.fixture.awayTeam.name %></b></label>
                <input type="number" name="awayTeamScore" value="<%= result.awayTeamScore %>" min="0" class="form-control">
            </div>
            <div>
                <textarea name="info" id="" cols="30" rows="10" class="form-control"><%= result.info %></textarea>
            </div>
            <input type="submit" class="btn btn-md btn-primary my-3" />
        </form>
    </div>

<%- include("../partials/footer") -%>
