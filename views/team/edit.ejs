<%- include("../partials/header") -%>
    <header class="jumbotron">
        <h1>Edit <%= team.name %> Team</h1>
    </header>
    <div class="container">
        <form method="POST" action="/team/<%= team._id %>/?_method=PUT">
            <div class="form-group">
                <label>Name of Team:</label>
                <input name="name" type="text" value="<%= team.name %>" class="form-control" />
            </div>
            <div class="form-group">
                <label>Description:</label>
                <input name="description" type="text" value="<%= team.description %>" class="form-control" />
            </div>
            <div class="form-group">
                <label for="season">Season:</label>
                <select name="season" id="season" class="form-control">
                    <% if(team.season){ %>
                        <option value="<%= team.season._id %>"><%= team.season.name %></option>
                    <% } %>
                    <% seasons.forEach((season) => { %>
                        <option value="<%= season._id %>"><%= season.name %></option>
                    <% }) %>
                </select>
            </div>
            <input type="submit" />
        </form>
    </div>

<%- include("../partials/footer") -%>
